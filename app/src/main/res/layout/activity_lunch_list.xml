<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:shrinkColumns="1"
    >
    <TableRow>
        <TextView android:text="Name:" />
        <EditText android:id="@+id/name" />
    </TableRow>
    <TableRow>
        <TextView android:text="Address:" />
        <EditText android:id="@+id/addr" />
    </TableRow>
    <TableRow>
        <TextView android:text="Type:" />
        <RadioGroup android:id="@+id/types">
            <RadioButton android:id="@+id/take_out"
                android:text="Take-Out"
                android:checked="true" />
            <RadioButton android:id="@+id/sit_down"
                android:text="Sit-Down" />
            <RadioButton android:id="@+id/delivery"
                android:text="Delivery" />
        </RadioGroup>
    </TableRow>
    <TableRow>
        <TextView android:text="Discount:" />
        <RadioGroup android:id="@+id/muc">
            <RadioButton android:id="@+id/giam25"
                android:text="giảm 25%"
                android:checked="true" />
            <RadioButton android:id="@+id/giam50"
                android:text="giảm 50%" />
            <RadioButton android:id="@+id/giam75"
                android:text="giảm 75%" />
        </RadioGroup>
    </TableRow>
    <TableRow>
        <TextView android:text="pay by credit cards" />
        <CheckBox android:id="@+id/card"/>
    </TableRow>

     <Button android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

</TableLayout>
